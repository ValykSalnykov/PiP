{
  "manifest_version": 3,
  "name": "DAO Tools+",
  "description": "Центр инструментов DAO: запуск PiP, интеграция с PlanFix и Syrve, а также будущие утилиты для работы.",
  "version": "1.1.0",
  "minimum_chrome_version": "116",
  "action": {
    "default_title": "Открыть DAO Tools+",
    "default_icon": {
      "16": "icons/icon16.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png"
  },
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://hub.daolog.net/*",
    "https://studio--studio-1696970562-bd013.us-central1.hosted.app/syrve-install*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://hub.daolog.net/*",
        "https://studio--studio-1696970562-bd013.us-central1.hosted.app/syrve-install*"
      ],
      "js": [
        "content/bridge.js"
      ],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "inpage/pip-main.js",
        "inpage/pip-placeholder.css"
      ],
      "matches": [
        "https://hub.daolog.net/*",
        "https://studio--studio-1696970562-bd013.us-central1.hosted.app/syrve-install*"
      ]
    }
  ]
}