{
  "manifest_version": 3,
  "name": "DAO Tools+",
  "description": "Центр инструментов DAO: запуск PiP, интеграция с PlanFix и Syrve, а также будущие утилиты для работы.",
  "version": "1.3.0",
  "minimum_chrome_version": "116",
  "action": {
    "default_title": "DAO Tools+",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_popup": "planfix/popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://*.us-central1.hosted.app/*",
    "https://hub.daolog.net/*",
    "https://dao.planfix.ua/*",
    "https://planfix-to-syrve.com:8000/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "commands": {
    "toggle-pip": {
      "suggested_key": {
        "default": "Alt+Shift+P"
      },
      "description": "Переключить режим PiP для текущей вкладки"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.us-central1.hosted.app/*",
        "https://hub.daolog.net/*"
      ],
      "js": [
        "content/bridge.js"
      ],
      "run_at": "document_start"
    },
    {
      "matches": [
        "https://dao.planfix.ua/*"
      ],
      "js": [
        "content/planfix.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "inpage/pip-main.js",
        "inpage/pip-placeholder.css"
      ],
      "matches": [
        "https://*.us-central1.hosted.app/*",
        "https://hub.daolog.net/*"
      ]
    }
  ]
}