{
  "manifest_version": 3,
  "name": "DAO Tools+",
  "description": "Центр инструментов DAO: запуск PiP, интеграция с PlanFix и Syrve, а также будущие утилиты для работы.",
  "version": "1.1.1",
  "minimum_chrome_version": "116",
  "action": {
    "default_title": "Planfix To Syrve",
    "default_icon": {
      "16": "icons/icon16.png"
    },
    "default_popup": "planfix/popup.html"
  },
  "icons": {
    "16": "icons/icon16.png"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://studio--studio-1696970562-bd013.us-central1.hosted.app/syrve-install/*",
    "https://hub.daolog.net/*",
    "https://dao.planfix.ua/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://studio--studio-1696970562-bd013.us-central1.hosted.app/syrve-install/*",
        "https://hub.daolog.net/*"
      ],
      "js": [
        "content/bridge.js"
      ],
      "run_at": "document_start"
    },
    {
      "matches": [
        "https://dao.planfix.ua/*"
      ],
      "js": [
        "content/planfix.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "inpage/pip-main.js",
        "inpage/pip-placeholder.css"
      ],
      "matches": [
        "https://studio--studio-1696970562-bd013.us-central1.hosted.app/*",
        "https://hub.daolog.net/*"
      ]
    }
  ]
}